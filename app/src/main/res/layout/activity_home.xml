<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="3dp"
        android:gravity="center_vertical"
        android:background="@color/color_primario">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_walkapawlogo"
            app:tint="@color/blanco"/>

        <!--
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WalkaPaw"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            android:layout_marginStart="12dp" />
        -->

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp">

        <!-- Nuevo tab: Menú Principal -->
        <LinearLayout
            android:id="@+id/tabMenuPrincipal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/color_primario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_primario" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabSolicitar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/ivSolicitar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_walk"
                app:tint="@color/color_primario"/>

            <TextView
                android:id="@+id/tvSolicitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solicitar"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_primario"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabActividad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/ivActividad"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                app:tint="@color/color_primario"/>

            <TextView
                android:id="@+id/tvActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividad"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_primario"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabCuenta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/ivCuenta"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_account"
                app:tint="@color/color_primario"/>

            <TextView
                android:id="@+id/tvCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_primario"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
