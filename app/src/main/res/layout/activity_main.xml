<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F7F8FA"
    android:padding="32dp">

    <ImageView
        android:id="@+id/logoWalkapaw"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/walkapaw_logo"
        android:contentDescription="Logo Walkapaw"
        android:layout_marginBottom="28dp"/>

    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a Walkapaw!"
        android:textSize="22sp"
        android:textColor="#22223B"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu app para pasear mascotas"
        android:textSize="15sp"
        android:textColor="#4A4E69"
        android:layout_marginBottom="28dp"/>

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00BCD4"
        android:layout_marginBottom="14dp"/>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Registrar Cuenta"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00BCD4"/>

</LinearLayout>